<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Results">

    <!--TextureView
        android:id="@+id/textureView2"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:background="#633974"
        android:foreground="#633974"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" -->

    <LinearLayout
        android:layout_width="416dp"
        android:layout_height="660dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="table" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_graph"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="graph" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_results"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="results" />


        </com.google.android.material.tabs.TabLayout>

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:visibility="visible">

            <ListView
                android:id="@+id/C0_list"
                style="@style/Widget.AppCompat.ListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ListView
                android:id="@+id/C1_list"
                style="@style/Widget.AppCompat.ListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ListView
                android:id="@+id/C2_list"
                style="@style/Widget.AppCompat.ListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TableLayout
                android:id="@+id/match_results"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            </TableLayout>

        </LinearLayout>

        <TableLayout
            android:id="@+id/table_res"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:visibility="gone">

            <TableRow android:id="@+id/cloumn_headers">

                <TextView android:text="RK" />

                <TextView android:text="Name" />

                <TextView android:text="MP" />

                <TextView android:text="W" />

                <TextView android:text="D" />

                <TextView android:text="L" />

                <TextView android:text="TP" />

                <TextView android:text="GF" />

                <TextView android:text="GA" />

                <TextView android:text="GD" />

                <TextView android:text="P5" />

            </TableRow>

        </TableLayout>

        <SeekBar
            android:id="@+id/seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <com.softmoore.android.graphlib.GraphView
            android:id="@+id/graph_view"
            android:layout_width="wrap_content"
            android:layout_height="446dp"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/axis_data_horizontal"
                android:layout_width="142dp"
                android:layout_height="wrap_content"
                android:text="horizontal" />

            <Button
                android:id="@+id/axis_data_vertical"
                android:layout_width="131dp"
                android:layout_height="match_parent"
                android:text="Vertical" />

            <Button
                android:id="@+id/line_choice"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:text="display" />

        </LinearLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        </androidx.viewpager2.widget.ViewPager2>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:clickable="true"
        android:tint="#FFFFFF"
        app:backgroundTint="#633974"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/homeAsUpIndicator" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="Results"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/textureView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textureView2" />

</androidx.constraintlayout.widget.ConstraintLayout>